{
  "manifest_version": 3,
  "name": "Emma Lite - MTAP Memory Layer",
  "version": "1.1.9",
  "description": "MTAP-powered memory orchestration for AI. Capture, store, and federate your conversations with ChatGPT, Claude, and more using the Memory Transport & Access Protocol.",
  "author": "Emma HML",
  
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "activeTab",
    "scripting",
    "contextMenus",
    "notifications",
    "alarms"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content-universal.js"],
      "css": ["css/content.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["js/emma-hybrid-engine.js", "js/emma-orb.js", "js/universal-media-capture.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "options_page": "options.html"
}